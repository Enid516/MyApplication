<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_frag_image_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black" />

    <LinearLayout
        android:id="@+id/layout_top_frag_iamge_preview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_panel_height"
        android:background="@color/color_translucence"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back_frag_image_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:background="@color/color_translucence"
            android:paddingRight="20dp"
            android:src="@drawable/icon_back_white" />

        <TextView
            android:id="@+id/tv_count_frag_image_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1/9"
            android:textColor="@color/color_white"
            android:textSize="@dimen/comm_text_size" />

        <Button
            android:background="@color/color_translucence"
            android:id="@+id/btn_complete_frag_image_preview"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:text="完成"
            android:textColor="@color/color_white" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_bottom_frag_image_preview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_panel_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_translucence"
        android:gravity="center_vertical|right"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />
    </LinearLayout>


</RelativeLayout>