<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comm_panel_height"
    android:background="@color/color_translucence"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_back_frag_image_status"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_translucence"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:src="@drawable/icon_back_white" />

    <TextView
        android:id="@+id/tv_count_frag_image_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1/9"
        android:textColor="@color/color_white"
        android:textSize="@dimen/comm_text_size" />

    <Button
        android:id="@+id/btn_complete_frag_image_status"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_translucence"
        android:text="完成"
        android:textColor="@color/color_white" />
</LinearLayout>

